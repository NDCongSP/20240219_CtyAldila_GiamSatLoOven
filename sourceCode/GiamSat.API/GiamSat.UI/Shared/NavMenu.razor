<RadzenPanelMenu ShowArrow="true">
    <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-p-4" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
        <RadzenImage Path="images/logoAldila.ico" style="width: 48px; height: 48px;"></RadzenImage>
        @* <RadzenText Text="radzenAppASM" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);" /> *@
    </RadzenStack>
    <RadzenPanelMenuItem Text="Trang chủ" Icon="dashboard" Path="/" />
    <RadzenPanelMenuItem Text="Cấu hình Oven" Icon="settings_applications">
        <ChildContent>
            @foreach (var item in _ovensInfo)
            {
                linkC = $"/ovenconfig/{item.Id}";
                <RadzenPanelMenuItem Text=@item.Name Icon="label_important" Path=@linkC />
            }
        </ChildContent>
    </RadzenPanelMenuItem>
    <RadzenPanelMenuItem Text="Biểu đồ" Icon="insights" Path="/realtimetrend" />
    <RadzenPanelMenuItem Text="Báo cáo" Icon="description" Path="/report" />
    <RadzenPanelMenuItem Text="Cài đặt" Icon="description" Path="/settings" />
</RadzenPanelMenu>
